    <RelativeLayout app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_marginTop="@dimen/keyline">
        <com.gumtree.android.common.views.TintImageView app:id="0x1020007" app:layout_width="wrap_content" app:layout_height="wrap_content" app:src="@drawable/ic_keyboard_arrow_right_white_24dp" app:scaleType="center" app:layout_alignParentLeft="true" app:layout_centerVertical="true" app:supportTintColor="?attr/colorIcon" />
