<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_weight="1.0">
        <RelativeLayout android:orientation="vertical" android:background="?attr/backgroundColorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/suggested_category_header_holder" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <LinearLayout android:orientation="vertical" android:id="@+id/suggested_category" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/suggested_category_header_holder" />
            <FrameLayout android:id="@+id/show_more" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/suggested_category" />
        </RelativeLayout>
    </ScrollView>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_weight="1.0">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:orientation="vertical" android:id="@+id/layout_header_all" android:layout_width="match_parent" android:layout_height="wrap_content" />
            <LinearLayout android:orientation="vertical" android:id="@+id/primary_category" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@drawable/divider" android:layout_below="@+id/layout_header_all" android:showDividers="middle" />
        </RelativeLayout>
    </ScrollView> />
